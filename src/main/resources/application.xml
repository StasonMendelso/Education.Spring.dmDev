<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config/>
<!--    <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/>-->

    <context:property-placeholder location="classpath*:application.properties"/>

    <!--    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">-->
    <!--        <property name="locations" value="classpath:application.properties"/>-->
    <!--    </bean>-->

    <!--    ${} -->
    <bean class="org.stanislav.bpp.InjectBeanPostProcessor"/>
    <bean class="org.stanislav.bpp.TransactionBeanPostProcessor"/>
    <bean class="org.stanislav.bpp.AuditingBeanPostProcessor"/>

    <bean class="org.stanislav.bfpp.LogBeanFactoryPostProcessor"/>
    <bean class="org.stanislav.bfpp.VerifyBreakpointBeanFactoryPostProcessor"/>

    <bean name="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="${database.driver}"/>
    </bean>
    <bean id="pool1" name="p1,poolConnection1," class="org.stanislav.database.pool.ConnectionPool">
        <constructor-arg name="username" type="java.lang.String" value="${database.username}"/>
        <constructor-arg name="poolSize" type="java.lang.Integer" value="${database.pool.size}"/>
        <constructor-arg index="2" name="args" type="java.util.List">
            <list value-type="java.lang.Object">
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg index="3" name="properties" type="java.util.Map">
            <null/>
        </constructor-arg>
        <!--     #{}   -->
        <property name="properties">
            <map key-type="java.lang.String" value-type="java.lang.Object">
                <entry key="url" value="postgresUrl"/>
                <entry key="password" value="123"/>
                <entry key="driver" value="#{driver.substring(3)}"/>
                <entry key="test" value="#{driver.length() > 10}"/>
                <entry key="test1" value="#{driver.length() > T(Math).random()*10}"/>
                <entry key="hosts" value="#{'${database.hosts}'.split(',')}"/>
            </map>
        </property>
    </bean>
    <bean id="companyRepository"
          class="org.stanislav.database.repository.CompanyRepository">
    </bean>
</beans>